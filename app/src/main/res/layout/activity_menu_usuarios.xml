<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menu3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvsesionusu"
        android:background="@color/rojo"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Bienvenido Usuario X"
        android:padding="25dp"
        />

    <TextView
        android:id="@+id/tvsesionarriendoadmin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Gestion de Usuarios"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="84dp" />


    <ImageButton
        android:id="@+id/btnop5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/mistickets"
        android:clickable="true"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnop6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/verperfil"
        android:clickable="true"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/SALIR3"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="250dp"
            android:background="@drawable/salir"
            android:clickable="true"
            android:paddingTop="10dp"
            tools:layout_editor_absoluteX="274dp"
            tools:layout_editor_absoluteY="620dp" />
    </LinearLayout>




</LinearLayout>